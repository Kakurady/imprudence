<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
	 name="busy"
	 title="IM Response Options"
	 can_tear_off="false">
 
  <check_box
		 label="自动回复收到的即时消息"
		 name="InstantMessageResponseEnabled" />
  <check_box
		 label="Announce 收到的即时消息"
		 name="InstantMessageAnnounceIncoming" />
  <check_box
		 label="Steal focus"
		 name="InstantMessageAnnounceStealFocus" />
  <check_box
		 label="自动回复非好友"
		 name="InstantMessageResponseFriends" />
  <check_box
		 label="自动回复屏蔽的人"
		 name="InstantMessageResponseMuted" />
  <check_box
		 label="自动回复任何人"
		 name="InstantMessageResponseAnyone" />
  <check_box
		 label="对方一开始打字就自动回复"
		 name="InstantMessageShowOnTyping" />
  <check_box
		 label="不要显示被自动回复的信息"
		 name="InstantMessageShowResponded" />
  <check_box
		 label="自动回复所有信息" name="InstantMessageResponseRepeat" />
 
  <text
		 name="text_box1">
    回复文字:
  </text>
  <text
		 name="text_box_a">
    Use &quot;#f&quot; for 收件人的名
  </text>
  <text
		 name="text_box_b">
   Use &quot;#l&quot; for 收件人的姓
  </text>
  <text
		 name="text_box_c">
    Use &quot;#t&quot; for 当前时间
  </text>
 
  <text_editor
		 name="im_response"
		 spell_check="true" />
 
  <check_box
		 label="回复时同时送出物体"
		 name="InstantMessageResponseItem" />
 
  <view_border
		 blevel_style="in"
		 name="im_give_drop_target_rect" />
 
  <text
		 name="Give inventory"
		 tool_tip="Drop an inventory item here to have it given along with the auto-response.">
    Drop an inventory item here
  </text>
 
  <view_border
		 blevel_style="in"
		 name="im_give_disp_rect" />
 
  <text
		 name="im_give_disp_rect_txt"
		 tool_tip="">
    Currently set to: ITEM
  </text>
 
  <button
		 label="取消"
		 name="btn_cancel"
		 tool_tip=""/>
  <button
		 label="确定"
		 name="btn_ok"
		 tool_tip="" />
 
</floater>